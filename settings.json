{
  "workbench.colorTheme": "Andromeda",
  "workbench.iconTheme": "material-icon-theme",
  "eslint.format.enable": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  // Colors
  "workbench.colorCustomizations": {
    "editorLineNumber.activeForeground": "#fff",
    "editorLineNumber.foreground": "#444",
    "editorCursor.foreground": "#F7CA18",
    "terminalCursor.foreground": "#F7CA18"
  },

  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "eslint.validate": ["javascript", "typescript"],
  "editor.formatOnSave": true,
  "liveServer.settings.CustomBrowser": "chrome",
  "liveSassCompile.settings.showOutputWindow": false,
  "explorer.confirmDelete": false,
  "prettier.arrowParens": "avoid",
  "prettier.useTabs": false,
  "prettier.tabWidth": 2,
  "prettier.singleQuote": false,
  "workbench.statusBar.visible": false,
  "editor.smoothScrolling": true,
  "editor.cursorBlinking": "expand",
  "editor.lineNumbers": "on",
  "editor.cursorWidth": 3,
  "prettier.printWidth": 80,
  "editor.parameterHints.enabled": true,
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "explorer.confirmDragAndDrop": false,
  "workbench.startupEditor": "none",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",

  // Exclude folders
  "search.exclude": {
    "**/dist": true,
    "**/.history": true,
    "**/node_modules": true,
    "**/bower_components": true,
    "**/.sass-cache": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.sass-cache": true,
    "**/public/blog": true,
    "**/.history": true,
    "**/tmp": true,
    "**/.cache": true,
    // "**/.vscode": true,
    ".idea/": true
  },

  //"workbench.activityBar.visible": false,
  "workbench.sideBar.location": "right",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "[feature]": {
    "editor.defaultFormatter": "alexkrechik.cucumberautocomplete"
  },
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1"
  },
  "editor.accessibilitySupport": "off",
  "javascript.preferences.importModuleSpecifier": "relative",
  "typescript.preferences.importModuleSpecifier": "relative",
  "gitlens.rebaseEditor.ordering": "asc",
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.inlineSuggest.enabled": true,

  "newFile.defaultBaseFileName": "newFile",
  "newFile.relativeTo": "file",
  "newFile.defaultFileExtension": ".ts",
  "newFile.rootDirectory": "~",
  "newFile.showPathRelativeTo": "root",
  "newFile.expandBraces": false,
  "window.commandCenter": false,
  "workbench.layoutControl.enabled": false,
  "nxConsole.showNodeVersionOnStartup": false,
  "console-ninja.featureSet": "Community",
  "kotlin.languageServer.enabled": false,
  "kotlin.debugAdapter.enabled": false,
  "window.zoomLevel": 0.5,
  "editor.stickyScroll.enabled": false
}
